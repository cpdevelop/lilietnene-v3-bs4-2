<div id="brands">
  <div class="row">
    {{#each brands.index}}
      <div class="col-lg-3 col-md-4 col-sm-6 col-12 boxes {{alphabetical-order}} {{filtering}}">
        <div class="rotatebox">
          <div class="card rotatebox__side rotatebox__side--front">
            <a class="d-lg-none" href="{{url}}"></a>
              <picture>
                <!--[if IE 9]><video style="display: none"><![endif]-->
                <source media="(min-width: 1280px)" srcset="assets/images/brands-pic-{{img}}-1280.jpg 1x, assets/images/brands-pic-{{img}}-1280-2x.jpg 2x">
                <source media="(min-width: 1024px)" srcset="assets/images/brands-pic-{{img}}-1024.jpg 1x, assets/images/brands-pic-{{img}}-1024-2x.jpg 2x">
                <source media="(min-width: 640px)" srcset="assets/images/brands-pic-{{img}}-640.jpg 1x, assets/images/brands-pic-{{img}}-640-2x.jpg 2x">
                <source media="(min-width: 320px)" srcset="assets/images/brands-pic-{{img}}-320.jpg 1x, assets/images/brands-pic-{{img}}-320-2x.jpg 2x">
                <!--[if IE 9]></video><![endif]-->
                <img src="assets/images/brands-pic-{{img}}-640.jpg" class="card-img-top lazyload" alt="{{alt}}">
              </picture>
              <div class="card-body">
                <h5 class="card-title">{{name}}</h5>
                <small>{{kana}}</small>
                <p class="card__data">
                  <span class="card__category">{{category}}</span>
                  {{#if target1}}<span class="card__tag">{{target1}}</span>{{/if}}
                  {{#if target2}}<span class="card__tag">{{target2}}</span>{{/if}}
                  {{#if target3}}<span class="card__tag">{{target3}}</span>{{/if}}
                </p>
              </div>

          </div>
          <div class="card rotatebox__side rotatebox__side--back d-none d-lg-block">
            <div class="card-body">
              <h5 class="card-title">{{name}}</h5>
              <small>{{kana}}</small>
              <p class="card__desc">{{description}}</p>
              <p><a class="btn btn-light-extended" href="{{url}}" role="button">VIEW MORE</a></p>
            </div>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>
